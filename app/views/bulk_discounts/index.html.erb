<h1>Bulk Discounts</h1>
<% @bulk_discounts.each_with_index do |disc, index| %>
  <p><%= link_to "Discount #{index + 1}", merchant_bulk_discount_path(@merchant, disc) %></p>
  <p>Discount Percentage: <%= disc.percentage_discount %>%</p>
  <p>Discount Threshold: <%= disc.quantity_threshold %></p>
<% end %>

<h3>Upcoming Holidays</h3>
<% @holidays.each do |holiday| %>
  <p><%= holiday.name %></p>
<% end %>
